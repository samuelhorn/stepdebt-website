---
import Layout from "../layouts/Layout.astro";
---

<Layout title="StepDebt">
  <div class="flex flex-col sm:flex-row items-center gap-12">
    <img src="/screen.png" alt="StepDebt" class="w-[320px] rounded-3xl" />
    <div class="max-w-[320px] sm:w-auto">
      <h1>StepDebt – The Step Counter That Keeps You Accountable</h1>
      <p>
        Missed your step goal? StepDebt adds it to tomorrow. Walk extra? It goes
        to your step bank. A minimalist step tracker that helps you stay
        consistent—without guilt or pressure.
      </p>
      <a href="/">
        <img src="/appstore.svg" alt="Download on the App Store" class="w-40" />
      </a>
    </div>
  </div>
</Layout>
